<body>
  <h1>Realia — Base de dades d’edicions i inscripcions</h1>
  <p class="subtitle">
    Consulta dels registres del projecte <strong>Realia</strong>: autors antics, editors humanistes,
    obres, inscripcions citades, referències modernes i funció filològica dels <em>realia</em>.
  </p>

  <div class="controls">
    <label for="search"><strong>Cerca global:</strong></label>
    <input id="search" type="text" placeholder="Cerca per autor, editor, obra, inscripció, lloc…" />
    <span class="small">El fitxer ha de ser <code>realia_clean.csv</code> al mateix directori.</span>
  </div>

  <div style="overflow-x:auto; max-height: 75vh;">
    <table id="table">
      <thead>
        <tr>
          <th>Autor antic</th>
          <th>Editor humanista</th>
          <th>Obra (edició, any)</th>
          <th>Inscripció citada</th>
          <th>Referència moderna</th>
          <th>Tipus de realia</th>
          <th>Lloc / procedència</th>
          <th>Funció dins el comentari</th>
          <th>Lectura / variant</th>
          <th>Observacions</th>
        </tr>
      </thead>
      <tbody>
        <!-- Es generarà amb JavaScript -->
      </tbody>
    </table>
  </div>

  <script>
    const CSV_FILE = "realia_clean.csv"; // ha d’estar a docs/ o a la mateixa carpeta que aquest HTML

    async function fetchCSV() {
      const res = await fetch(CSV_FILE);
      if (!res.ok) {
        console.error("No s’ha pogut carregar el CSV:", res.status);
        return [];
      }
      const text = await res.text();
      return parseCSV(text);
    }

    // Parser CSV mínim (assumeix comes simples i sense cometes complicades)
    function parseCSV(text) {
      const lines = text.split(/\r?\n/).filter(l => l.trim() !== "");
      if (!lines.length) return [];
      const headers = lines[0].split(",").map(h => h.trim());
      const rows = [];
      for (let i = 1; i < lines.length; i++) {
        const cols = lines[i].split(","); // prou per al nostre cas simple
        const obj = {};
        headers.forEach((h, idx) => {
          obj[h] = (cols[idx] || "").trim();
        });
        rows.push(obj);
      }
      return rows;
    }

    function renderTable(rows) {
      const tbody = document.querySelector("#table tbody");
      tbody.innerHTML = "";
      rows.forEach(row => {
        const tr = document.createElement("tr");
        function cell(key, isTag) {
          const td = document.createElement("td");
          const value = row[key] || "";
          if (isTag && value) {
            const span = document.createElement("span");
            span.className = "tag";
            span.textContent = value;
            td.appendChild(span);
          } else {
            td.textContent = value;
          }
          tr.appendChild(td);
        }
        cell("Autor antic");
        cell("Editor humanista");
        cell("Obra (edició, any)");
        cell("Inscripció citada");
        cell("Referència moderna");
        cell("Tipus de realia", true);
        cell("Lloc/procedència");
        cell("Funció dins el comentari");
        cell("Lectura / variant");
        cell("Observacions");
        tbody.appendChild(tr);
      });
    }

    (async function init() {
      const data = await fetchCSV();
      let current = data.slice();
      renderTable(current);

      const input = document.getElementById("search");
      input.addEventListener("input", () => {
        const q = input.value.toLowerCase().trim();
        if (!q) {
          current = data.slice();
        } else {
          current = data.filter(row =>
            Object.values(row).some(v =>
              v && v.toLowerCase().includes(q)
            )
          );
        }
        renderTable(current);
      });
    })();
  </script>
</body>
</html>
